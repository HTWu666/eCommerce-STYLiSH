<title>STYLiSH - 單品</title>
<link rel="stylesheet" type="text/css" href="/CSS/pages/product.css">  

<main id="product-section">
    <div id="main-img-section">
        <div id="main-img-container">
            <img id="main-img">
        </div>
        <div id="info-container">
            <div id="product-title"></div>
            <div id="product-id"></div>
            <div id="price"></div>
            <div id="variant-container">
                <label>樣式</label>
                <div id="variant-list"></div>
            </div>
            <div id="qty-container">
                <label>數量</label>
                <input type="number" class="form-control" min="0" id="input-qty"></div>
            <div id="add-cart-btn"><button>加入購物車</button></div>
            <div id="details-info-container">
                <div id="note" class="details-info">note：</div>
                <div id="texture" class="details-info">texture：</div>
                <div id="wash" class="details-info">wash：</div>
                <div id="place" class="details-info">place：</div>
            </div>
        </div>
    </div>
    <div id="divider"><div>更多產品資訊<hr></div>
    <div id="other-img-section">
        <div id="description"></div>
        <div id="img-container"></div>
    </div>
</main>

